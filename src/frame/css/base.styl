html,
body {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background: rgb(240, 242, 245);
}

ul {
  padding: 0;
  list-style: none;
  margin: 0;
}

input {
  outline: none;
}

input:-webkit-autofill {
  -webkit-box-shadow: 0 0 0 1000px white inset !important;
  box-shadow: 0 0 0 1000px white inset !important;
}

pre {
    margin: 16px 0;
}
